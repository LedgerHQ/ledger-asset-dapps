                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                },
                                "screens": {
                                    "$ref": "#/$defs/screens",
                                    "title": "Screens"
                                },
                                "selector": {
                                    "description": "Unique identifier of the function in the contract.",
                                    "pattern": "^0x[a-f0-9]{8}$",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "functionType",
                                "functionName",
                                "options",
                                "selector",
                                "arguments"
                            ],
                            "type": "object"
                        },
                        "type": "array"
                    }
                },
                "required": [
                    "name",
                    "address",
                    "parsers"
